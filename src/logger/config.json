{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "general": {
      "format": "[%(levelname)s]: (%(asctime)s) %(message)s at %(module)s.%(funcName)s",
      "datefmt": "%Y-%m-%d %H:%M:%S %z"
    }
  },
  "handlers": {
    "debug": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "general",
      "level": "DEBUG",
      "filename": "logs/debug.log",
      "maxBytes": 10485760,
      "backupCount": 3
    },
    "app": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "general",
      "level": "INFO",
      "filename": "logs/podalirius.log",
      "maxBytes": 10485760,
      "backupCount": 3
    }
  },
  "loggers": {
    "podalirius": {
      "level": "DEBUG",
      "handlers": ["debug", "app"]
    }
  }
}
